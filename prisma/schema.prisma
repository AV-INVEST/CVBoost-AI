// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usage {
requestKey String? @db.Text
  id        Int      @id @default(autoincrement())
  day       String?                 // ‚Üê reso nullable per evitare errori di migrazione
  count     Int      @default(0)
  ip        String?
  uid       String?
  plan      String?  @default("free")
  createdAt DateTime @default(now())
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  plan      String   @default("free") // 'free' | 'pro' | 'business' | 'business_plus'
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}